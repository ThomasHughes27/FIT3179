{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 400,
  "title": "GDP per capita V Social Support per Region per Year",
  "data": {
    "url": "https://raw.githubusercontent.com/ThomasHughes27/FIT3179/main/map%20viz/data/CLEANED_ALLYEARS.csv"
  },
  "params": [
    {
      "name": "Year_selection",
      "bind": {
        "input": "select",
        "options": ["2015", "2016", "2017", "2018", "2019"],
        "labels": ["2015", "2016", "2017", "2018", "2019"],
        "name": "Year Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "Year_selection == null || datum.Year == Year_selection"}
  ],
  "encoding": {
    "x": {
      "field": "GDP per capita",
      "type": "quantitative",
      "title": "GDP per capita"
    },
    "y": {"field": "Social support", "type": "quantitative"}
  },
  "layer": [
    {
      "selection": {
        "region_highlight": {
          "type": "multi",
          "fields": ["Region"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "color": {"field": "Region", "type": "nominal"},
        "opacity": {
          "condition": {"selection": "region_highlight", "value": 0.8},
          "value": 0.1
        },
        "size": {
          "field": "Happiness Score",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [3, 4, 5, 6],
            "range": [50, 250, 450, 650, 850]
          }
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Region", "type": "nominal"},
          {"field": "Happiness Rank", "type": "quantitative"},
          {"field": "Happiness Score", "type": "quantitative"},
          {"field": "Year", "type": "nominal"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'Central African Rep.' || datum['Country'] == 'Dem. Rep. Congo' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Italy' || datum['Country'] == 'Yemen' ||  datum['Country'] == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Region", "type": "nominal"},
          {"field": "Happiness Rank", "type": "quantitative"},
          {"field": "Happiness Score", "type": "quantitative"},
          {"field": "Year", "type": "nominal"}
        ]
      }
    }
  ],
  "config": {}
}
